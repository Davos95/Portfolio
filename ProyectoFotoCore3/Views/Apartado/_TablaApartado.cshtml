@using ProyectoFotoCore3.Models.Entities.Apartado.Model
@model ApartadosVMO

<table class="highlight striped">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Descripción</th>
            <th>Precio</th>
            <th colspan="2">Opciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var apartado in Model.Apartados)
        {
            <tr>
                <td>@apartado.Name</td>
                <td style="line-break:anywhere">@apartado.Descripcion</td>
                <td>@apartado.Price</td>
                <td><i style="cursor: pointer;" class="material-icons" onclick="LoadPartial('modalApartado', '@Url.Action("Edit","Apartado")', 'GET', {'id': @apartado.Id});">edit</i></td>
                <td><i style="color:red; cursor: pointer;" class="material-icons" onclick="DeleteApartado(@apartado.Id)">cancel</i></td>
            </tr>
        }
    </tbody>
</table>
