@using ProyectoFotoCore3.Models.Entities.User.Model
@model LoginVMO

@{
    Layout = "";
}
<!DOCTYPE html>
<html>
<head>
    <title>Login</title>

    <link href="~/css/materialize.min.css" rel="stylesheet" />
    <link href="~/css/application.css" rel="stylesheet" />
    <link href="~/css/login/login.css" rel="stylesheet" />
</head>
<body>
    <main>
        <div class="row">
            <div class="col s12" style="text-align:center">
                <h1>Picture Manager</h1>
            </div>
        </div>
        <div class="row">
            <div class="card-login col s3 login-center">
                <h3>Login</h3>
                <div class="card">
                    <div class="card-content">
                        @using (Html.BeginForm())
                        {
                            <div class="input-field">
                                @Html.TextBoxFor(x => x.Nickname, new { @class = "", id = "nick" })
                                <label for="nick"><i class="material-icons"></i>Nickname</label>
                            </div>
                            <div class="input-field">
                                @Html.TextBoxFor(x => x.Password, new { @class = "", id = "password", type = "password" })
                                <label for="password"><i class="material-icons"></i>Password</label>
                            </div>
                            <div class="input-field">
                                <button type="submit" class="btn green waves waves-effect waves-darken btn-width-100 btn-pictureManager">ENTRAR</button>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </main>

    <script src="~/js/materialize.js"></script>
</body>
</html>